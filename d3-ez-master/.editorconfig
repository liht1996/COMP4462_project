[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=tab
tab_width=2

[{*.html,*.htm}]
indent_style=space
indent_size=2

[{*.js}]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[{*.json}]
indent_style=space
indent_size=2

[{*.css}]
indent_style=tab
indent_size=2
